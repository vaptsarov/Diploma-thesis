<Window x:Class="TestCaseManager.Views.CustomControls.GitHubRepoSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:TestCaseManager.BindingConverters"
    xmlns:local="clr-namespace:TestCaseManager.Core.Proxy;assembly=TestCaseManager.Core"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    MinWidth="750"
    MinHeight="100"
    MaxWidth="800"
    MaxHeight="585"
    WindowStyle="None"
    ResizeMode="NoResize"
    AllowsTransparency="True" BorderThickness="1" Name="DragWindow" Height="109">

    <StackPanel Margin="5,25,5,5" Orientation="Horizontal">
        <StackPanel Orientation="Horizontal" Name="GitHubSuccessfulyCreatedPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden">
            <Label Name="CreatedLabel" Width="0">Successfully created GitHub issue </Label>
            <Button Name="CopyToClipboard" Width="0" Click="CopyToClipboard_Click">Copy URL to Clipboard</Button>
        </StackPanel>
        <DockPanel Name="IssueRegistrationPanel">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Margin="0,-25,0,0" FontWeight="Medium">Create GitHub Issue</Label>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Center">GitHub Username</Label>
                    <TextBox Width="140" Name="GitHubUsername" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Center">Github Password</Label>
                    <PasswordBox Width="140" Name="GitHubPassword" Margin="10,5,5,5"/>

                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="30,-15,0,0">
                <Button Height="25"  Margin="5" Click="LoadRepositories_Click">Load repositories</Button>
                <Label Name="InvalidCredentials" Content="Invalid username or password!" FontWeight="Medium" VerticalAlignment="Center" Height="16" Foreground="Red" HorizontalAlignment="Center" Visibility="Hidden"/>

            </StackPanel>
            <StackPanel VerticalAlignment="Center" Margin="0,5,0,0">
                <ComboBox Height="25" Width="300" Name="GitHubRepositoryList" BorderThickness="1"  Margin="5" IsTextSearchEnabled="True"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="_Create Issue" Margin="5" Name="CreateIssue" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CreateIssue_Click" IsEnabled="False"/>
                    <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>

