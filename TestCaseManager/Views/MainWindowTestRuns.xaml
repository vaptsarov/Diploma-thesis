<UserControl x:Class="TestCaseManager.Views.MainWindowTestRuns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestCaseManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="300" Loaded="MainWindowTestRuns_Loaded">

    <DockPanel Height="Auto" Name="MainTable" Width="Auto" LastChildFill="True" Visibility="Visible">
        <Grid Name="TestRunGrid">

            <TextBlock Text="Projects > Areas > Test Cases" Margin="0,0,0,36" />
            <Border Name="TestRunBorder" BorderBrush="Black" BorderThickness="1.6" Width="270" Margin="-25,20,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Left" >
                <ListBox Name="TestRunListBox" FontSize="14" Grid.Row="1" VerticalAlignment="Stretch" Margin="0,0,0,5" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Name="TestRunItemBorder" BorderBrush="Black" BorderThickness="0,1,0,1" Grid.Row="0" Grid.Column="0" Margin="0,-3,0,-2">
                                    <Grid>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <TextBlock TextWrapping="Wrap" Text="{Binding RunName}" Margin="5,5,5,5" />
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
