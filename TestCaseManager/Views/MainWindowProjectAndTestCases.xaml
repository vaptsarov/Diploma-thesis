<UserControl x:Class="TestCaseManager.Pages.MainWindowProjectAndTestCases"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestCaseManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:EmployeeTypes x:Key="empTypes" />
        <DataTemplate x:Key="managedEmployeeTemplate">
            <TextBlock Text="{Binding Path=Name}" />
        </DataTemplate>
        <HierarchicalDataTemplate x:Key="employeeTemplate"
                              ItemsSource="{Binding ManagedEmployees}"
                              ItemTemplate="{StaticResource managedEmployeeTemplate}">
            <TextBlock Text="{Binding Path=Name}" />
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="employeeTypeTemplate"
                              ItemsSource="{Binding Employees}"
                              ItemTemplate="{StaticResource employeeTemplate}">
            <TextBlock Text="{Binding Path=EmpType}" />
        </HierarchicalDataTemplate>
    </UserControl.Resources>
   
        <Grid Name="ProjectGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" 
                           />
            </Grid.RowDefinitions>
            <TextBlock Text="Projects > Areas > Test Cases" />
        <Border BorderBrush="Black" BorderThickness="1" Height="800" Width="250" HorizontalAlignment="Left" Margin="0,20,0,0">
            <TreeView Grid.Row="1"
              ItemTemplate="{StaticResource employeeTypeTemplate}"
              ItemsSource="{StaticResource empTypes}"
              SelectedItemChanged="tvEmps_SelectedItemChanged"
              Name="tvEmps" />
        </Border>
    </Grid>

</UserControl>
